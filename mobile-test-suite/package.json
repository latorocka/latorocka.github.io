{
  "name": "mobile-test-automation-suite",
  "version": "1.0.0",
  "description": "Cross-platform mobile test automation framework using Appium and WebDriverIO for comprehensive mobile app validation",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:android",
    "test:android": "wdio config/wdio.android.conf.js",
    "test:ios": "wdio config/wdio.ios.conf.js",
    "test:parallel": "wdio config/wdio.parallel.conf.js",
    "test:smoke": "wdio config/wdio.smoke.conf.js",
    "test:regression": "wdio config/wdio.regression.conf.js",
    "start:appium": "appium",
    "install:doctor": "appium-doctor",
    "setup:android": "node scripts/setup-android.js",
    "setup:ios": "node scripts/setup-ios.js",
    "report": "allure generate allure-results --clean && allure open",
    "lint": "eslint tests/ --ext .js",
    "clean": "rimraf allure-results allure-report screenshots"
  },
  "keywords": [
    "appium",
    "mobile",
    "automation",
    "testing",
    "webdriverio",
    "android",
    "ios",
    "cross-platform"
  ],
  "author": "Brian LaTorraca <latorocka@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@wdio/allure-reporter": "^8.24.0",
    "@wdio/appium-service": "^8.24.0",
    "@wdio/cli": "^8.24.0",
    "@wdio/local-runner": "^8.24.0",
    "@wdio/mocha-framework": "^8.24.0",
    "@wdio/spec-reporter": "^8.24.0",
    "appium": "^2.0.0",
    "appium-doctor": "^1.16.2",
    "appium-uiautomator2-driver": "^2.34.0",
    "appium-xcuitest-driver": "^5.12.0",
    "chai": "^4.3.10",
    "rimraf": "^5.0.5",
    "webdriverio": "^8.24.0"
  },
  "devDependencies": {
    "allure-commandline": "^2.24.1",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/latorocka/mobile-test-suite.git"
  }
}